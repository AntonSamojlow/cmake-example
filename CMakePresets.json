{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 21,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "base",
			"displayName": "For more information: http://aka.ms/cmakepresetsvs",
			"hidden": true,
			"generator": "Ninja",
			"architecture": {
				"value": "x64",
				"strategy": "external"
			},
			"binaryDir": "${sourceDir}/out/build/${presetName}",
			"installDir": "${sourceDir}/out/install/${presetName}",
			"toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
			"environment": {
				"VCPKG_ROOT": "./vcpkg"
			}
		},

		{
			"name": "asan",
			"hidden": true,
			"cacheVariables": {
				"ENABLE_SANITIZER_ADDRESS": true
			}
		},

		{
			"name": "debug",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},

		{
			"name": "release",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},

		{
			"name": "clang-cl",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "clang-cl.exe",
				"CMAKE_CXX_COMPILER": "clang-cl.exe"
			},
			"vendor": {
				"microsoft.com/VisualStudioSettings/CMake/1.0": {
					"intelliSenseMode": "windows-clang-x64"
				}
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},

		{
			"name": "msvc",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "cl.exe",
				"CMAKE_CXX_COMPILER": "cl.exe"
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},

		{
			"name": "linux",
			"hidden": true,
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			},
			"vendor": {
				"microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
					"sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
				}
			}
		},

		{
			"name": "macos",
			"hidden": true,
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Darwin"
			},
			"vendor": {
				"microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
					"sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
				}
			}
		},

		{
			"name": "msvc-debug",
			"displayName": "MSVC Debug",
			"inherits": [ "base", "msvc", "debug" ]
		},
		{
			"name": "msvc-release",
			"displayName": "MSVC Release",
			"inherits": [ "base", "msvc", "release" ]
		},
		{
			"name": "msvc-asan",
			"displayName": "MSVC ASan",
			"inherits": [ "base", "msvc", "debug", "asan" ]
		},
		{
			"name": "clang-cl-debug",
			"displayName": "ClangCl Debug",
			"inherits": [ "base", "clang-cl", "debug" ]
		},
		{
			"name": "clang-cl-release",
			"displayName": "ClangCl Release",
			"inherits": [ "base", "clang-cl", "release" ]
		},
		{
			"name": "clang-cl-asan",
			"displayName": "ClangCl ASan",
			"inherits": [ "base", "clang-cl", "release", "asan" ]
		},
		{
			"name": "linux-release",
			"displayName": "Linux Release",
			"inherits": [ "base", "linux", "release" ]
		},
		{
			"name": "macos-release",
			"displayName": "MacOs Release",
			"inherits": [ "base", "macos", "release" ]
		}

	],

	"buildPresets": [
		{
			"name": "msvc-release",
			"displayName": "default",
			"configurePreset": "msvc-release"
		},
		{
			"name": "msvc-debug",
			"displayName": "default",
			"configurePreset": "msvc-debug"
		},
		{
			"name": "msvc-debug-verbose",
			"displayName": "verbose",
			"configurePreset": "msvc-debug"
		},
		{
			"name": "clang-cl-default",
			"displayName": "default",
			"configurePreset": "clang-cl-debug"
		},
		{
			"name": "clang-cl-verbose",
			"displayName": "verbose",
			"configurePreset": "clang-cl-debug"
		}
	],

	"testPresets": [
		{
			"name": "msvc-release",
			"configurePreset": "msvc-release",
			"output": {
				"outputOnFailure": true
			}
		},
		{
			"name": "clang-cl-release",
			"configurePreset": "clang-cl-release",
			"output": {
				"outputOnFailure": true
			}
		}

	]
}
