{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 21,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "base",
			"displayName": "For more information: http://aka.ms/cmakepresetsvs",
			"hidden": true,
			"generator": "Ninja",
			"architecture": {
				"value": "x64",
				"strategy": "external"
			},
			"binaryDir": "${sourceDir}/out/build/${presetName}",
			"installDir": "${sourceDir}/out/install/${presetName}",
			"toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
			"environment": {
				"VCPKG_ROOT": "./vcpkg"
			}
		},

		{
			"name": "windows",
			"inherits": "base",
			"hidden": true,
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},

		{
			"name": "unix-like",
			"hidden": true,
			"inherits": "base",
			"condition": {
                "type": "inList",
                "string": "${hostSystemName}",
                "list": [
                    "Linux",
                    "Darwin"
                ]
            },
            "vendor": {
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
                }
            }
		},

		{
			"name": "asan",
			"hidden": true,
			"cacheVariables": {
				"ENABLE_SANITIZER_ADDRESS": true
			}
		},
		{
			"name": "debug",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "release",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"WARNINGS_AS_ERRORS" : "False"
			}
		},

		{
			"name": "clang-cl",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "clang-cl.exe",
				"CMAKE_CXX_COMPILER": "clang-cl.exe"
			},
			"vendor": {
				"microsoft.com/VisualStudioSettings/CMake/1.0": {
					"intelliSenseMode": "windows-clang-x64"
				}
			}
		},
		{
			"name": "msvc",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "cl.exe",
				"CMAKE_CXX_COMPILER": "cl.exe"
			}
		},
		{
			"name": "clang",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "clang",
				"CMAKE_CXX_COMPILER": "clang++"
			}
		},
		{
			"name": "gcc",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "gcc",
				"CMAKE_CXX_COMPILER": "g++"
			}
		},

		{
			"name": "msvc-debug",
			"displayName": "MSVC Debug",
			"inherits": [ "windows", "msvc", "debug" ]
		},
		{
			"name": "msvc-release",
			"displayName": "MSVC Release",
			"inherits": [ "windows", "msvc", "release" ]
		},
		{
			"name": "msvc-asan",
			"displayName": "MSVC ASan",
			"inherits": [ "windows", "msvc", "debug", "asan" ]
		},
		{
			"name": "clang-cl-debug",
			"displayName": "ClangCl Debug",
			"inherits": [ "windows", "clang-cl", "debug" ]
		},
		{
			"name": "clang-cl-release",
			"displayName": "ClangCl Release",
			"inherits": [ "windows", "clang-cl", "release" ]
		},
		{
			"name": "clang-cl-asan",
			"displayName": "ClangCl ASan",
			"inherits": [ "windows", "clang-cl", "release", "asan" ]
		},
		{
			"name": "clang-release",
			"displayName": "Clang Release",
			"inherits": [ "unix-like", "clang", "release" ]
		},
		{
			"name": "gcc-release",
			"displayName": "Gcc Release",
			"inherits": [ "unix-like", "gcc", "release" ]
		}

	],

	"buildPresets": [
		{
			"name": "msvc-release",
			"displayName": "default",
			"configurePreset": "msvc-release"
		},
		{
			"name": "clang-cl-release",
			"displayName": "default",
			"configurePreset": "clang-cl-release"
		},
		{
			"name": "clang-release",
			"displayName": "default",
			"configurePreset": "clang-release",
			"verbose": true
		},
		{
			"name": "gcc-release",
			"displayName": "default",
			"configurePreset": "gcc-release",
			"verbose": true
		},
		{
			"name": "msvc-debug",
			"displayName": "default",
			"configurePreset": "msvc-debug"
		},
		{
			"name": "msvc-debug-verbose",
			"displayName": "verbose",
			"configurePreset": "msvc-debug",
			"verbose": true
		},
		{
			"name": "clang-cl-debug",
			"displayName": "default",
			"configurePreset": "clang-cl-debug"
		},
		{
			"name": "clang-cl-debug-verbose",
			"displayName": "verbose",
			"configurePreset": "clang-cl-debug",
			"verbose": true
		}
	],

	"testPresets": [
		{
			"name": "base",
			"hidden": true,
			"output": {
				"outputOnFailure": true
			}
		},
		{
			"name": "msvc-release",
			"configurePreset": "msvc-release",
			"inherits": ["base"]
		},
		{
			"name": "clang-cl-release",
			"configurePreset": "clang-cl-release",
			"inherits": ["base"]
		},
		{
			"name": "clang-release",
			"configurePreset": "clang-release",
			"inherits": ["base"]
		},
		{
			"name": "gcc-release",
			"configurePreset": "gcc-release",
			"inherits": ["base"]
		}

	]
}
