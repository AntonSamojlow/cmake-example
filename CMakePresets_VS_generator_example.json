{
  "version": 3,
  "configurePresets": [
    //using Visual Studio generator: supports arrchitecture choice x86/x64 
    //see also https://gitlab.kitware.com/cmake/cmake/-/issues/16259
    {
      "name": "win-msvc-base",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "architecture": { "strategy": "external" },
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "x64-debug-msvc",
      "displayName": "x64 Debug (msvc)",
      "inherits": "win-msvc-base",
      "cacheVariables": {
        "architecture": { "value": "x64" },
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x64-release",
      "displayName": "x64 Release (msvc)",
      "inherits": "win-msvc-base",
      "cacheVariables": {
        "architecture": { "value": "x64" },
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "x86-debug-msvc",
      "displayName": "x86 Debug (msvc)",
      "inherits": "win-msvc-base",
      "architecture": { "value": "x86" },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x86-release",
      "displayName": "x86 Release (msvc)",
      "inherits": "win-msvc-base",
      "architecture": { "value": "x86" },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }

  ]
}
